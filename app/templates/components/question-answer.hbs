<button type="button" class="btn btn-primary" {{action 'delete' question}}>Delete Question</button>

<div class="well">
  <h2> Answers: </h2>
  <ul>
    {{#each sortedAnswers as |answer|}}
      {{answer-tile answer=answer destroyAnswer="destroyAnswer" updateAnswer="updateAnswer"}}
    {{/each}}
  </ul>
</div>
