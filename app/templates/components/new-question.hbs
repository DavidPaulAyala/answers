{{#if addNewQuestion}}
<div class="well">
  <h1>New Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Ask your question.</label>
        {{input value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="author">Enter your name</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="note">Any additional notes?(optional, usually not neccessary)</label>
        {{input value=note id="note"}}
      </div>

      <button type="button" class="btn btn-primary" {{action 'saveQuestion'}}>Ask New Question</button>
    </form>
  </div>
</div>
{{else}}
  <button type="button" class="btn btn-primary" {{action 'questionFormShow'}}>Ask New Question</button>
{{/if}}
